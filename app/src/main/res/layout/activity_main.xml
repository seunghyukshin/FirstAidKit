<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seunghyukshin.firstaidkit.MainActivity"
    android:orientation="vertical"
    android:background="#A9D0F5">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/date"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:fontFamily="@font/bmdohyeon"
            android:text="8월 23일 목요일"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:background="#585858"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <ImageView
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:id="@+id/weather_background"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/tmp"
            android:textColor="#A9D0F5"
            android:textSize="50dp"
            android:fontFamily="@font/bmdohyeon"
            android:text="35℃"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/place"
            android:textColor="#FFF"
            android:fontFamily="@font/bmdohyeon"
            android:text="서울광역시 마포구"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button_6"
                android:orientation="vertical"
                >
                <TextView
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:text="강수 확률"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:fontFamily="@font/bmdohyeon"
                    android:textSize="13dp"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/pop"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:fontFamily="@font/bmdohyeon"
                    android:textSize="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button_6"
                android:orientation="vertical"
                >
                <TextView
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:text="습도"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:fontFamily="@font/bmdohyeon"
                    android:textSize="13dp"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/reh"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:fontFamily="@font/bmdohyeon"
                    android:textSize="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button_6"
                android:orientation="vertical"
                >
                <TextView
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:text="미세먼지"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:fontFamily="@font/bmdohyeon"
                    android:textSize="13dp"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/pm10"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:fontFamily="@font/bmdohyeon"
                    android:textSize="11dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button_6"
                android:orientation="vertical"
                >
                <TextView
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:text="초미세먼지"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:fontFamily="@font/bmdohyeon"
                    android:textSize="13dp"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/pm25"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:fontFamily="@font/bmdohyeon"
                    android:textSize="11dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_margin="4dp"
                android:background="@drawable/my_button_4"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">

                <TextView
                    android:textColor="#A9D0F5"
                    android:gravity="center"
                    android:id="@+id/helper"
                    android:fontFamily="@font/bmdohyeon"
                    android:textSize="20dp"
                    android:text="Information"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:textColor="#A9D0F5"
                android:layout_margin="12dp"
                android:background="@drawable/dia_button"

                android:textSize="16dp"
                android:fontFamily="@font/bmdohyeon"
                android:id="@+id/button_diagnosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="진단하기" />

            <Button
                android:textColor="#A9D0F5"
                android:layout_margin="12dp"

                android:textSize="16dp"
                android:fontFamily="@font/bmdohyeon"
                android:background="@drawable/dia_button"
                android:id="@+id/button_first_aid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="응급처치" />
        </LinearLayout>
        </LinearLayout>
</LinearLayout>
