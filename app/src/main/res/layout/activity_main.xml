<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seunghyukshin.firstaidkit.MainActivity"
    android:orientation="vertical"
    android:background="#A9D0F5">
    <android.support.constraint.ConstraintLayout
        android:layout_margin="4dp"
        android:background="@drawable/my_button_3"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <!-- 날씨나 대기상태 api사용해서 출력할 layout!-->
        <ImageView
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:id="@+id/weather_background"/>
        <TextView
            android:textColor="#5882FA"
            android:fontFamily="@font/bmdohyeon"
            android:textSize="25dip"
            android:id="@+id/shortWeather"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            android:text="날씨나 대기정보가 들어갈 공간"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="250dip"
        android:orientation="vertical">
        <LinearLayout
            android:layout_margin="4dp"
            android:background="@drawable/my_button_2"

            android:layout_width="match_parent"
            android:layout_height="75dip"
            android:orientation="vertical">

            <TextView
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:id="@+id/helper"
                android:fontFamily="@font/bmdohyeon"
                android:textSize="20dip"
                android:text="asdasd"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:textColor="#FFFFFF"
                android:layout_margin="4dp"
                android:background="@drawable/my_button"

                android:textSize="20dip"
                android:fontFamily="@font/bmdohyeon"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/button_diagnosis"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="진단하러가기\nGO!" />

            <Button
                android:textColor="#FFFFFF"
                android:layout_margin="4dp"
                android:textSize="20dip"
                android:fontFamily="@font/bmdohyeon"
                android:background="@drawable/my_button"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/button_first_aid"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="응급처치법보기\nGO!" /></LinearLayout>



    </LinearLayout>
</LinearLayout>
