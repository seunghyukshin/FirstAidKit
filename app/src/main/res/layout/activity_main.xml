<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seunghyukshin.firstaidkit.MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <!-- 날씨나 대기상태 api사용해서 출력할 layout!-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="날씨나 대기정보가 들어갈 공간"/>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="3"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:id="@+id/button_diagnosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진단하러가기 GO!" />

        <Button
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:id="@+id/button_first_aid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="응급처치법보기 GO!" />


    </LinearLayout>
</LinearLayout>
